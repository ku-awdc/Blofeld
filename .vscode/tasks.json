{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "View PDF",
            "type": "shell",
            "command": "sumatrapdf ${fileBasenameNoExtension}.pdf",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Build as Slides",
            "type": "shell",
            "command": [
                "pandoc",
                "--wrap=preserve",
                "--standalone",
                "--citeproc",
                "--bibliography=${relativeFileDirname}/library.bib",
                "--pdf-engine=xelatex",
                "-t beamer",
                "-V theme=metropolis",
                "--slide-level=3",
                "-o ${fileBasenameNoExtension}.pdf ${relativeFile}"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build as article",
            "type": "shell",
            "command": [
                "pandoc",
                "--toc",
                "--number-sections",
                "--standalone",
                "--citeproc",
                "--pdf-engine=xelatex",
                "--wrap=preserve",
                "--bibliography=${relativeFileDirname}/library.bib",
                "-o ${fileBasenameNoExtension}.pdf ${relativeFile}"
            ],
            "problemMatcher": [],
            "group": "build"
        }
    ]
}